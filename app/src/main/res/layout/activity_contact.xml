<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2E7CE"
    tools:context=".ContactActivity">


    <androidx.appcompat.widget.Toolbar
        app:title="Contact Us"
        app:titleMarginStart="140dp"
        app:titleTextColor="#ffffff"
        android:id="@+id/contactToolbar"
        android:background="#A48D61"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <ImageView
        android:onClick="back"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/back"
        android:layout_width="30dp"
        android:layout_height="30dp"/>


    <ImageView
        android:id="@+id/namaz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:src="@drawable/namaz"
        android:layout_width="125dp"
        android:layout_height="125dp"/>


    <TextView
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:textSize="18dp"
        android:textColor="#38301F"
        android:layout_marginTop="70dp"
        android:lines="6"
        android:padding="18dp"
        android:text="If you have any questions or suggestions about our privacy policy and terms of services do not hesitate to contact us at persontrackerpro@gmail.com"
        android:layout_below="@id/namaz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>